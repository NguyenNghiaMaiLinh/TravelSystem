@model ReflectionIT.Mvc.Paging.PagingList<ProjectDemo12.Models.TourDetail>
@addTagHelper *,ReflectionIT.Mvc.Paging
@using ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "Index";
}

<h2>Tour Details Page</h2>
<h5><i class="fas fa-calendar-day"></i> <strong>@ViewBag.Wanning</strong> number of days of tour </h5>

@if (ViewBag.Error == null)
{
<h5><i class="fas fa-calendar-day"></i> <strong>@ViewBag.numberOfMissingDays</strong> number of days without tourdetails </h5>
    <div class="row form-group">
        <a class="btn btn-info" asp-action="CreateTourDetails">Create Detail New</a>
    </div>
}



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    <div class="row form-group">
                        <a class="btn btn-warning" asp-action="EditTourDetails" asp-route-id="@item.ID">Edit</a>
                        <a class="btn btn-success" asp-action="DetailsTourDetails" asp-route-id="@item.ID">Details</a>
                        <a class="btn btn-danger" asp-action="DeleteTourDetails" asp-route-id="@item.ID">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-default" asp-action="Index">Back to List</a>
<nav aria-label="Suppilers navigation example">
    <vc:pager paging-list="@Model" />
</nav>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}